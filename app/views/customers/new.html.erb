<div class="container">
<h2 class="font-weight-bold mt-3">顧客新規登録</h2>
<%= form_with model: @customer, local:true do |f| %>
  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>姓:</label>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-5 mt-3">
      <label>セイ:</label>
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="form-group col-md-2 mt-3">
      <label>性別:</label>
      <%= f.select :gender_id, Customer.gender_ids.keys.map,{}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>名:</label>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-5 mt-3">
      <label>メイ:</label>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>生年月日:</label>
      <%= f.date_select :birthday,
                    {use_month_numbers: true,
                    start_year: 1942,
                    end_year: 2002,
                    default: Date.new(1962, 1, 1),
                    date_separator: '/'}, {class: "form-control"} %>
    </div>
    <div class="form-group col-md-5 mt-3">
      <label>年齢:</label>
       <%= f.number_field :age, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>郵便番号:</label>
      <%= f.text_field :post_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>住所:</label>
      <%= f.text_area :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>自宅電話:</label>
      <%= f.text_field :home_phone_number, class: "form-control" %>
    </div>
    <div class="form-group col-md-5 mt-3">
      <label>携帯電話:</label>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-5 mt-3">
      <label>リスト名:</label>
       <%= f.select :list_group, Customer.list_groups.keys.map, {},{class: "form-control"} %>
    </div>
  </div>
  
  <%= f.submit '新規登録',  class: "btn btn-primary mt-3" %>

<% end %>
</div>
